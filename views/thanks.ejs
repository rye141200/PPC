<html lang="en"></html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Thank You</title>
	<link href='https://fonts.googleapis.com/css?family=Lato:300,400|Montserrat:700' rel='stylesheet' type='text/css'>
	<style>
		@import url(//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css);
		@import url(//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css);
	</style>
	<link rel="stylesheet" href="https://2-22-4-dot-lead-pages.appspot.com/static/lp918/min/default_thank_you.css">
	<script src="https://2-22-4-dot-lead-pages.appspot.com/static/lp918/min/jquery-1.9.1.min.js"></script>
	<script src="https://2-22-4-dot-lead-pages.appspot.com/static/lp918/min/html5shiv.js"></script>
</head>
<body>
	<header class="site-header" id="header">
		<h1 class="site-header__title" data-lead-id="site-header-title">THANKS FOR YOUR PURCHASE <%=user.name%>!</h1>
	</header>

	<div class="main-content">
		<i class="fa fa-check main-content__checkmark" id="checkmark"></i>
		<p class="main-content__body" data-lead-id="main-content-body">
			Thanks for your purchase! Our team will be arriving soon to provide the service you asked for! You can track your order <a href='/me/orders'>here</a>
		</p>
		<p id="timer-message">Redirecting in <span id="timer">10</span> seconds...</p>
	</div>

	<footer class="site-footer" id="footer">
		<p class="site-footer__fineprint" id="fineprint">Copyright Â©
			<%= new Date().getFullYear() %> PPC | All Rights Reserved</p>
	</footer>

	<script>
		// Set timer duration (in seconds)
		let timerDuration = 10;
		
		// Get the timer element
		const timerElement = document.getElementById('timer');

		// Create a countdown function
		const countdown = setInterval(() => {
			// Decrease the timer value
			timerDuration--;

			// Update the text in the timer span
			timerElement.textContent = timerDuration;

			// If the timer reaches 0, redirect the user
			if (timerDuration === 0) {
				clearInterval(countdown);
				window.location.href = '/'; // Redirect to home page
			}
		}, 1000); // Run every second (1000 milliseconds)
	</script>
</body>
</html>
