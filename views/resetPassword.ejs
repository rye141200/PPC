<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title%></title>
    <link rel="icon" href="/img/favicon.png" type="image/png">
    <link href="/css/home.css" rel="stylesheet" />
    <link
      href="https://unpkg.com/flowbite@1.5.0/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <script defer src="/js/index.js" type="module"></script>
  </head>
  <body class="relative min-h-screen bg-[#f9fafb]">
    <%- include('components/_header')%>

    <section id="AccountSettings" class="relative container mx-auto my-10">
      <div class="max-w-xl mx-auto bg-white shadow-2xl p-6 rounded-lg">
        <!-- Password Settings -->
        <h2 class="text-3xl pt-7 font-bold text-[#242464] mb-6">
          Reset your password
        </h2>
        <form id="new-password" class="space-y-4 mb-6 form">
          <div class="flex flex-col">
            <label class="block text-[6B6B73] mb-2 text-xl">New password</label>
            <input
              type="password"
              id="new-password-input"
              placeholder="••••••••"
              class="newPass text-gray-400 w-full p-3 border border-gray-300 rounded-md bg-gray-100 focus:outline-none focus:ring-2 focus:ring-[#242464]-500"
            />
          </div>
          <div class="flex justify-between">
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input
                  id="show-password-reset-password"
                  type="checkbox"
                  value=""
                  class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300"
                />
              </div>
              <label
                for="remember"
                class="ms-2 text-sm font-medium text-gray-900"
                >Show password</label
              >
            </div>
        </form>
        <div class="flex justify-end">
          <button
            id="reset-password-btn"
            class="bg-[#242464] text-white py-3 px-6 rounded-md hover:bg-[#4D486C] focus:outline-none focus:ring-2 focus:ring-[#242464]-500"
          >
            Reset password
          </button>
        </div>
      </div>
    </section>

    <%- include('components/_footer')%>
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
    <!-- Include Flowbite JS -->
    <script src="https://unpkg.com/flowbite@latest/dist/flowbite.min.js"></script>
  </body>
</html>
