<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link href="/css/home.css" rel="stylesheet" />
    <link
      href="https://unpkg.com/flowbite@1.5.0/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <script defer src="/js/login.js" type="module"></script>
    <script defer src="/js/searchBar.js" type="module"></script>
    <script defer src="/js/productsDashboard.js" type="module"></script>
  </head>
  <body class="relative min-h-screen bg-[#f9fafb]">
    <%- include('components/_header')%>
    <!-- stepper -->
    <section class="container mx-auto pl-6 md:pl-0 mt-6">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2">
          <li class="inline-flex items-center">
            <a
              href="/"
              class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-mulledWine"
            >
              <svg
                class="w-3 h-3 me-2.5"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"
                />
              </svg>
              Home
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <svg
                class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 6 10"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="m1 9 4-4-4-4"
                />
              </svg>
              <a
                href="/admin/dashboard"
                class="ms-1 text-sm font-medium text-gray-700 hover:text-mulledWine md:ms-2"
                >Dashboard</a
              >
            </div>
          </li>
        </ol>
      </nav>
    </section>
    <section class="relative container mx-auto pl-6 pr-6 md:pl-0 md:pr-0 my-10">
    
      <div class="flex flex-col space-y-2">
        <div class="flex flex-row space-x-2">
        

          <a class="w-1/2 flex justify-center items-center space-x-3 bg-mulledWine py-4 rounded-lg" href="/admin/dashboard/products">
            <button class="flex items-center justify-center flex-shrink-0 w-10 h-10 rounded cursor-pointer">
              <ion-icon name="cube-outline" class="w-6 h-6 text-white"></ion-icon>
            </button>
            <span class="leading-none text-lg font-bold text-white">Products</span>
          </a>
          <a class="w-1/2 flex justify-center items-center space-x-3 bg-gray-100 py-4 rounded-lg hover:bg-gray-300" href="/admin/dashboard/orders/accepted">
            <button class="flex items-center justify-center flex-shrink-0 w-10 h-10 rounded cursor-pointer">
              <ion-icon name="receipt-outline" class="w-6 h-6 text-black-500"></ion-icon>
            </button>
            <span class="leading-none text-lg font-bold">Orders</span>
          </a>

        </div>
        
        <div class="flex flex-col md:flex-row md:space-x-2 space-y-2 md:space-y-0">
          <div class="md:w-1/4 flex flex-row md:flex-col overflow-y-auto p-4 bg-gray-100 rounded-lg space-y-0 space-x-2 md:space-y-2 md:space-x-0">
            <a class="flex items-center flex-shrink-0 h-10 px-3 text-sm font-medium bg-gray-200 rounded hover:bg-gray-300"
                        href="/admin/dashboard/products">
                        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        <span class="ml-2 leading-none">New Product</span>
                    </a>
          <% if(typeof document !== 'undefined' ) { %>
          <% document.forEach(product => { %>
            <% if(typeof selectedDocument !=='undefined' && selectedDocument.name === product.name) {%>
          <a
            class="flex items-center flex-shrink-0 h-10 px-2 text-sm font-medium rounded bg-mulledWine text-white cursor-pointer"
            href="/admin/dashboard/products/<%=product.slug%>"
          >
            <span class="leading-none"><%=product.name%></span>
          </a>
          <% } else { %>
            <a
            class="flex items-center flex-shrink-0 h-10 px-2 not:space-y-2 text-sm font-medium rounded hover:bg-gray-300 cursor-pointer "
            href="/admin/dashboard/products/<%=product.slug%>"
            
          >
            <span class="leading-none"><%=product.name%></span>
          </a>
            <% } %>
          <% }); %>
        <% } %>
        
        </div>
      
        <% if(typeof selectedDocument !== 'undefined') { %>
        <div class="md:w-3/4 bg-gray-100 flex-grow p-4 rounded-lg">
            <div class="max-w-2xl px-4 py-8 mx-auto lg:py-16">
                <h2 class="mb-4 text-xl font-bold text-gray-900 ">Update product</h2>
                <form action="/product">
                    <div class="grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5">
                        <div class="sm:col-span-2">
                            <label for="name" class="block mb-2 text-sm font-medium text-gray-900 ">Name</label>
                            <input type="text" name="name" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " value="<%=selectedDocument.name%>" placeholder="Type product name" required=""
                            data-product-name="<%=selectedDocument.name%>">
                        </div>
                        <div class="w-full">
                            <label for="discount" class="block mb-2 text-sm font-medium text-gray-900 ">Discount</label>
                            <input type="text" name="discount" id="discount" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " value="<%=selectedDocument.discount%>" placeholder="0 %" required=""
                            data-product-discount="<%=selectedDocument.discount%>">
                        </div>
                        <div class="w-full">
                            <label for="price" class="block mb-2 text-sm font-medium text-gray-900 ">Price</label>
                            <input type="number" name="price" id="price" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " value="<%=selectedDocument.price %>" placeholder="299 SAR" required=""
                            data-product-price="<%=selectedDocument.price%>">
                        </div>
                        <div>
                            <label for="category" class="block mb-2 text-sm font-medium text-gray-900 ">Category</label>
                            <select id="category" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 "
                            data-product-category="<%=selectedDocument.category.id%>">
                            <% categories.forEach(category => { %>
                              <option value="<%= category.id %>" <%= category.name === selectedDocument.category.name ? 'selected' : '' %>><%= category.name %></option>
                            <% }) %>                            
                            </select>
                        </div>
                        <div>
                            <label for="item-weight" class="block mb-2 text-sm font-medium text-gray-900 ">Image</label>
                            <input class="block w-full mb-5 text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none "name="image" id="image" type="file">
                            <img src="/img/<%=selectedDocument.image%>" class="w-full h-auto max-w-xl rounded-lg" alt="<%=selectedDocument.name%>">
                        </div> 
                        
                        <div class="sm:col-span-2">
                          <label for="description" class="block mb-2 text-sm font-medium text-gray-900 ">Description</label>
                          <textarea name="description" id="description" rows="8" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 " placeholder="Write a product description here..."
                          data-product-description="<%=selectedDocument.description%>"
                          ><%=selectedDocument.description%></textarea>
                      </div>
                    </div>
                    <div class="flex items-center space-x-4">
                        <button type="submit" class="primary-btn btn-animated font-medium rounded-lg text-sm px-5 py-2.5 text-center "
                        id="update-product-btn"
                        data-product-id="<%=selectedDocument._id%>">
                            Update product
                        </button>
                        <button type="button" id="delete" class="inline-flex items-center delete-btn btn-animated font-medium rounded-lg text-sm px-5 py-2.5 text-center "
                        data-product-id="<%=selectedDocument._id%>">
                            <svg class="w-5 h-5 mr-1 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
                            Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <% } else { %>
          <div class="md:w-3/4 bg-gray-100 flex-grow p-4 rounded-lg">
            <div class="max-w-2xl px-4 py-8 mx-auto lg:py-16">
                <h2 class="mb-4 text-xl font-bold text-gray-900 ">Add new product</h2>
                <form action="#">
                    <div class="grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5">
                        <div class="sm:col-span-2">
                            <label for="name" class="block mb-2 text-sm font-medium text-gray-900 ">Name</label>
                            <input type="text" name="name" id="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " value="" placeholder="Type product name" required=""
                            data-product-name="">
                        </div>
                        <div class="w-full">
                            <label for="discount" class="block mb-2 text-sm font-medium text-gray-900 ">Discount</label>
                            <input type="text" name="discount" id="discount" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " value="" placeholder="0 %" required=""
                            data-product-discount="">
                        </div>
                        <div class="w-full">
                            <label for="price" class="block mb-2 text-sm font-medium text-gray-900 ">Price</label>
                            <input type="number" name="price" id="price" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 " value="" placeholder="299 SAR" required=""
                            data-product-price="">
                        </div>
                        <div>
                            <label for="category" class="block mb-2 text-sm font-medium text-gray-900 ">Category</label>
                            <select id="category" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 "
                            data-product-category="">
                            <% categories?.forEach(category => { %>
                            <option value="<%= category?.id %>"><%= category?.name %></option>
                            <% }) %>                 
                            </select>
                        </div>
                        <div>
                            <label for="item-weight" class="block mb-2 text-sm font-medium text-gray-900 ">Image</label>
                            <input class="block w-full mb-5 text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none " name="image" id="image" type="file" required>
                            <img src="" class="w-full h-auto max-w-xl rounded-lg" alt="">
                        </div> 
                        
                        <div class="sm:col-span-2">
                          <label for="description" class="block mb-2 text-sm font-medium text-gray-900 ">Description</label>
                          <textarea id="description" rows="8" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 " placeholder="Write a product description here..."
                          data-product-description="" required
                          ></textarea>
                      </div>
                    </div>
                    <div class="flex items-center space-x-4">
                        <button type="submit" class="primary-btn btn-animated font-medium rounded-lg text-sm px-5 py-2.5 text-center "
                        id="add-product-btn"
                        data-product-id="">
                            Add Product
                        </button>
                        
                    </div>
                </form>
            </div>
        </div>
          <% } %>
      </div>
      </div>
      
    </section>
    

    <!-- Footer -->
    <%- include('components/_footer')%>

    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
    <!-- Include Flowbite JS -->
    <script src="https://unpkg.com/flowbite@latest/dist/flowbite.min.js"></script>
  </body>
</html>
