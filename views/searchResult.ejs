<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title%></title>
    <link rel="icon" href="/img/favicon.png" type="image/png">
    <link href="/css/home.css" rel="stylesheet" />
    <link
      href="https://unpkg.com/flowbite@1.5.0/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <script defer src="/js/home.js" type="module"></script>
    <script defer src="/js/login.js" type="module"></script>
    <script defer src="/js/searchBar.js" type="module"></script>
    <script defer src="/js/index.js" type="module"></script>
    
  </head>
  <body class="relative min-h-screen bg-[#f9fafb]">
    <%- include('components/_header')%>
    <!-- stepper -->
    <section class="container mx-auto pl-6 md:pl-0 mt-6">
      <nav class="flex" aria-label="Breadcrumb">
        <ol
          class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse"
        >
          <li class="inline-flex items-center">
            <a
              href="/"
              class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-mulledWine"
            >
              <svg
                class="w-3 h-3 me-2.5"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"
                />
              </svg>
              Home
            </a>
          </li>
        </ol>
      </nav>
    </section>

    <!-- Products -->
    <section class="container mx-auto mt-6">
      <h3 class="ml-3 font-bold mt-10">Products</h3>
      <div id="product-section" class="grid-cols-2 grid md:grid-cols-4">
        <% pageItems?.forEach((product,index) => { %>
          <div
            class="mx-3 mt-6 flex flex-col rounded-xl bg-white text-surface shadow-secondary-1 sm:shrink-0 sm:grow sm:basis-0 place-content-between "
          >
            <a href="/products/<%=product.slug%>">
              <img
                class="rounded-t-lg product-img"
                src="/img/<%=product.image %>"
                alt="<%= product.name %>"
              />
            </a>
            <div class="p-6 product-info">
              <h5 class="mb-2 text-xl font-medium leading-tight product-name" data-product-id="<%=product.id%>"><%= product.name %></h5>
              <p class="mb-4 text-l"><ion-icon name="document-text-outline" class="mt-0.5"></ion-icon> <span class="product-description"><%= product.description %></span>  </p>
              <p><ion-icon name="pricetag-outline" class="mt-0.5"></ion-icon> <span class="product-price" data-discount="<%=product.discount%>">  <%= product.price %> SAR</span> </p>
            </div>
            <button
            
              type="button"
              class="border border-mulledWine font-medium rounded-2xl text-sm px-5 py-2.5 text-center me-2 mb-2 w-11/12 mx-auto flex items-center justify-center space-x-2 primary-btn btn-animated add-to-cart"
            >
              <ion-icon
                name="cart-outline"
                class="h-6 w-6 md hydrated"
                role="img"
              ></ion-icon>
              <span>Add to cart</span>
            </button>
          </div>
        <% }); %>
      </div>
    </section>
    <section class="container mx-auto mt-6">
      <nav class="mx-auto flex justify-center">
        <ul class="inline-flex -space-x-px text-sm md:text-lg">
          <li>
            <a
            id="previous-page-btn"
              href="#"
              class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700"
              >Previous</a
            >
          </li>
          <% for(let i = 0;i<(totalNumber/8);i++){ %>
            <li>
              <a href="/search?name=<%=substring%>&page=<%=i+1%>" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 "><%= i+1 %></a>
            </li> 
            <% } %>
          <li>
            <a
            id="next-page-btn"
              href="#"
              class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"
              >Next</a
            >
          </li>
        </ul>
      </nav>
    </section>



    <%- include('components/_footer')%>
    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>
    <!-- Include Flowbite JS -->
    <script src="https://unpkg.com/flowbite@latest/dist/flowbite.min.js"></script>
  </body>
</html>
